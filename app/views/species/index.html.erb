<h1>Listing species</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Scientific name</th>
    <th>Targets count</th>
    <th>Antibodies count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @species.each do |species| %>
  <tr>
    <td><%= species.name %></td>
    <td><%= species.scientific_name %></td>
    <td><%= species.targets_count %></td>
    <td><%= species.antibodies_count %></td>
    <td><%= link_to 'Show', species %></td>
    <td><%= link_to 'Edit', edit_species_path(species) %></td>
    <td><%= link_to 'Destroy', species, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

