<!DOCTYPE html>
<html>
<head>
  <title>Antibodies</title>
  <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/combo?3.2.0/build/cssreset/reset-min.css&3.2.0/build/cssfonts/fonts-min.css&3.2.0/build/cssgrids/grids-min.css&3.2.0/build/cssbase/base-min.css">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "rails", "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= image_tag "logo-312x65.png", :id => "logo" %>
<div id="navigation">
<ul id="mainmenu" class="horizontal_menu">
  <li><%= link_to_unless_current("Home", root_path) %></li>
  <li><%= link_to_unless_current("Targets", targets_path) %></li>
  <li><%= link_to_unless_current("Species", species_index_path) %></li>
  <li><%= link_to_unless_current("Projects", projects_path) %></li>
  <li><%= link_to_unless_current("Sources", sources_path) %></li>
  <li><%= link_to_unless_current("About", about_path) %></li>
</ul>
<ul id="usermenu" class="horizontal_menu">
<% if user_signed_in? %>
  <li><%= link_to_unless_current("Welcome #{current_user.email}", current_user) %></li>
  <li><%= link_to_unless_current("Sign out", destroy_user_session_path) %></li>
<% else %>
  <li><%= link_to_unless_current('Sign in', new_user_session_path)  %></li>
  <li><%= link_to_unless_current('Sign up', new_user_registration_path) %></li>
<% end %>
</ul>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div id="main">
<%= yield %>
</div>


<div id="footer">
</div>
</body>
</html>
