<h1><%= @project.name %></h1>

<h2>Description</h2>
<p>
  <%= @project.description %>
</p>

<h2>Targets</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Validations</th>
  </tr>
<% @project.targets.each do |target| %>
  <tr>
    <td><%= link_to target.name, target %></td>
    <td></td>
  </tr>
<% end %>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
